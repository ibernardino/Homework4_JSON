<Window x:Class="Problem2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problem2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White" Offset="0.545"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="lblPrompt" Content="Choose a breed to search:" HorizontalAlignment="Left" Margin="81,81,0,0" VerticalAlignment="Top" Width="378" Height="80" FontSize="30" FontWeight="Bold"/>
        <TextBox x:Name="txtBreed" HorizontalAlignment="Left" Height="31" Margin="145,138,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="245" FontSize="20"/>
        <Button x:Name="btnGo" Content="GO" HorizontalAlignment="Left" Margin="224,194,0,0" VerticalAlignment="Top" Width="75" Click="btnGo_Click"/>
        <Image x:Name="imgDog" HorizontalAlignment="Left" Height="291" Margin="494,61,0,0" VerticalAlignment="Top" Width="260"/>

    </Grid>
</Window>
