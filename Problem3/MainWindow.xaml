<Window x:Class="Problem3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problem3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <MediaElement x:Name="medVideo" HorizontalAlignment="Left" Height="254" Margin="178,102,0,0" VerticalAlignment="Top" Width="479" UnloadedBehavior="Manual" LoadedBehavior="Manual"/>
        <Button x:Name="btnPlay" Content="Play" HorizontalAlignment="Left" Margin="246,377,0,0" VerticalAlignment="Top" Width="75" Click="btnPlay_Click"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="491,377,0,0" VerticalAlignment="Top" Width="75" Click="btnStop_Click"/>
        <Button x:Name="btnGetVideo" Content="Get Video" HorizontalAlignment="Left" Margin="366,62,0,0" VerticalAlignment="Top" Width="75" Click="btnGetVideo_Click"/>
        <Label x:Name="lblPrompt" Content="VIDEO PLAYER" HorizontalAlignment="Left" Margin="279,12,0,0" VerticalAlignment="Top" Width="221" FontSize="30" FontWeight="Bold"/>

    </Grid>
</Window>
